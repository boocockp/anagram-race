{
  "id": "project_1",
  "name": "Anagram Race",
  "properties": {},
  "elements": [
    {
      "id": "app_1",
      "name": "Anagram Race",
      "properties": {
        "fonts": "Luckiest+Guy",
        "maxWidth": "600px"
      },
      "elements": [
        {
          "id": "page_1",
          "name": "Main Page",
          "properties": {
            "styles": {}
          },
          "elements": [
            {
              "id": "text_1",
              "name": "Title",
              "properties": {
                "content": "Agraman Race",
                "styles": {
                  "fontSize": "48",
                  "fontFamily": "Luckiest Guy",
                  "color": "#7529df"
                }
              },
              "kind": "Text"
            },
            {
              "id": "timer_1",
              "name": "Game Timer",
              "properties": {
                "period": 180,
                "interval": 1,
                "show": false,
                "endAction": {
                  "expr": "EndGame()"
                }
              },
              "kind": "Timer"
            },
            {
              "id": "data_5",
              "name": "Status",
              "properties": {
                "initialValue": {
                  "expr": "'Ready'"
                }
              },
              "kind": "Data"
            },
            {
              "id": "data_4",
              "name": "Score",
              "properties": {
                "initialValue": {
                  "expr": "0"
                }
              },
              "kind": "Data"
            },
            {
              "id": "data_1",
              "name": "The Word",
              "properties": {},
              "kind": "Data"
            },
            {
              "id": "data_6",
              "name": "Letters Shown",
              "properties": {
                "initialValue": {
                  "expr": "0"
                }
              },
              "kind": "Data"
            },
            {
              "id": "function_1",
              "name": "Points",
              "properties": {
                "input1": "word",
                "calculation": {
                  "expr": "Floor(Len(word) * 2 - LettersShown * 3)"
                }
              },
              "kind": "Function"
            },
            {
              "id": "data_2",
              "name": "Scrambled Word",
              "properties": {},
              "kind": "Data"
            },
            {
              "id": "data_3",
              "name": "Given Up",
              "properties": {
                "initialValue": {
                  "expr": "false"
                }
              },
              "kind": "Data"
            },
            {
              "id": "calculation_2",
              "name": "Answering",
              "properties": {
                "calculation": {
                  "expr": "And(TheWord, Not(IsCorrect), Not(GivenUp))"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "calculation_3",
              "name": "Game Running",
              "properties": {
                "calculation": {
                  "expr": "Or(Status == 'Playing', Status == 'Paused')"
                },
                "show": false
              },
              "kind": "Calculation"
            },
            {
              "id": "function_2",
              "name": "Start New Game",
              "properties": {
                "calculation": {
                  "expr": "Reset(GivenUp)\nReset(Score)\nReset(GameTimer)\nReset(TheWord)\nReset(ScrambledWord)\nSet(Status, 'Playing')\nStartNewWord()\nGameTimer.Start()"
                },
                "action": true
              },
              "kind": "Function"
            },
            {
              "id": "function_3",
              "name": "Start New Word",
              "properties": {
                "action": true,
                "calculation": {
                  "expr": "let word = RandomFrom(WordList())\nSet(TheWord, word)\nSet(ScrambledWord, Join(Shuffle(Split(word))))\nReset(LettersShown)\nReset(Keyboard) \nReset(GivenUp)"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_4",
              "name": "End Game",
              "properties": {
                "action": true,
                "calculation": {
                  "expr": "Set(Status, 'Ended')\n"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_6",
              "name": "Pause Game",
              "properties": {
                "action": true,
                "calculation": {
                  "expr": "Set(Status, 'Paused')\nGameTimer.Stop()"
                }
              },
              "kind": "Function"
            },
            {
              "id": "function_5",
              "name": "Continue Game",
              "properties": {
                "action": true,
                "calculation": {
                  "expr": "Set(Status, 'Playing')\nStartNewWord()\nGameTimer.Start()"
                }
              },
              "kind": "Function"
            },
            {
              "id": "dialog_1",
              "name": "Instructions",
              "properties": {
                "initiallyOpen": true,
                "layout": "vertical",
                "showCloseButton": true,
                "styles": {
                  "padding": "2em"
                }
              },
              "elements": [
                {
                  "id": "text_10",
                  "name": "Instructions Text",
                  "properties": {
                    "content": "You have 3 minutes to solve as many anagrams as you can.\n\n\nFor each word you will see the scrambled version and the points you can earn.  Type your answer in the box - you will see a tick when it is correct.\n\n\nClick Skip Word to give up and show the answer.\n\n\nClick Show A Letter to show some of the initial letters - but you will score fewer points.\n\n\nClick Next Word to move on to the next word.\n\n\n<b>Tips</b>\n<ul>\n<li>Words may be plural</li>\n<li>You can Pause the game, but it will skip the word you're on</li>\n</b>",
                    "allowHtml": true
                  },
                  "kind": "Text"
                },
                {
                  "id": "button_3",
                  "name": "Start Game 2",
                  "properties": {
                    "action": {
                      "expr": "StartNewGame()\nInstructions.Close()"
                    },
                    "show": {
                      "expr": "Not(GameRunning)"
                    },
                    "content": "Start Game",
                    "appearance": "filled"
                  },
                  "kind": "Button"
                }
              ],
              "kind": "Dialog"
            },
            {
              "id": "layout_2",
              "name": "Stats Layout",
              "properties": {
                "layout": "horizontal",
                "styles": {
                  "fontSize": "24"
                }
              },
              "elements": [
                {
                  "id": "text_5",
                  "name": "Score Display",
                  "properties": {
                    "content": {
                      "expr": "Score + \" points\""
                    },
                    "styles": {
                      "fontSize": "inherit",
                      "color": "blue",
                      "marginRight": "100"
                    },
                    "show": {
                      "expr": "Or(GameRunning, Status == 'Ended')"
                    }
                  },
                  "kind": "Text"
                },
                {
                  "id": "text_6",
                  "name": "Time Display",
                  "properties": {
                    "content": {
                      "expr": "Ceiling(GameTimer. remainingTime) + \"s left\""
                    },
                    "styles": {
                      "fontSize": "inherit",
                      "color": "green"
                    },
                    "show": {
                      "expr": "GameRunning"
                    }
                  },
                  "kind": "Text"
                },
                {
                  "id": "text_18",
                  "name": "Game Over",
                  "properties": {
                    "content": "Game Over",
                    "styles": {
                      "fontSize": "inherit",
                      "color": "white",
                      "backgroundColor": "green",
                      "padding": "0 0.5em",
                      "borderRadius": "8px"
                    },
                    "show": {
                      "expr": "Status == 'Ended'"
                    }
                  },
                  "kind": "Text"
                }
              ],
              "kind": "Block"
            },
            {
              "id": "block_5",
              "name": "Ready Panel",
              "properties": {
                "show": {
                  "expr": "Status == 'Ready'"
                }
              },
              "elements": [
                {
                  "id": "text_19",
                  "name": "Title",
                  "properties": {
                    "content": "Welcome!",
                    "styles": {
                      "color": "#7529df",
                      "fontFamily": "Luckiest Guy",
                      "fontSize": "28"
                    }
                  },
                  "kind": "Text"
                },
                {
                  "id": "text_14",
                  "name": "Ready Text",
                  "properties": {
                    "content": "Solve as many anagrams as you can in 3 minutes\n\nClick Instructions to learn how to play\n\nOr Start Game to dive right in!",
                    "styles": {
                      "fontSize": "20"
                    }
                  },
                  "kind": "Text"
                }
              ],
              "kind": "Block"
            },
            {
              "id": "block_7",
              "name": "Pause Panel",
              "properties": {
                "show": {
                  "expr": "Status == 'Paused'"
                }
              },
              "elements": [
                {
                  "id": "text_20",
                  "name": "Title",
                  "properties": {
                    "content": "Paused...",
                    "styles": {
                      "color": "#7529df",
                      "fontFamily": "Luckiest Guy",
                      "fontSize": "28"
                    }
                  },
                  "kind": "Text"
                },
                {
                  "id": "text_21",
                  "name": "Pause Text",
                  "properties": {
                    "content": "Click Continue Game to carry on",
                    "styles": {
                      "fontSize": "20"
                    }
                  },
                  "kind": "Text"
                }
              ],
              "kind": "Block"
            },
            {
              "id": "block_2",
              "name": "Play Panel",
              "properties": {
                "layout": "vertical",
                "show": {
                  "expr": "Status == 'Playing'"
                },
                "styles": {
                  "width": "100%",
                  "padding": "0"
                }
              },
              "elements": [
                {
                  "id": "block_3",
                  "name": "Question Layout",
                  "properties": {
                    "layout": "horizontal"
                  },
                  "elements": [
                    {
                      "id": "text_11",
                      "name": "Scrambled Letters",
                      "properties": {
                        "content": {
                          "expr": "ScrambledWord"
                        },
                        "styles": {
                          "fontSize": "20",
                          "letterSpacing": "1px"
                        }
                      },
                      "kind": "Text"
                    },
                    {
                      "id": "text_12",
                      "name": "Points To Win",
                      "properties": {
                        "content": {
                          "expr": "Points(TheWord) + \" points\""
                        },
                        "styles": {
                          "paddingTop": "3",
                          "marginLeft": "5em"
                        }
                      },
                      "kind": "Text"
                    }
                  ],
                  "kind": "Block"
                },
                {
                  "id": "block_8",
                  "name": "Clues Layout",
                  "properties": {
                    "layout": "horizontal"
                  },
                  "elements": [
                    {
                      "id": "text_22",
                      "name": "Starts With",
                      "properties": {
                        "content": {
                          "expr": "'Starts with: ' + Left(TheWord, LettersShown)"
                        },
                        "styles": {
                          "fontSize": "20",
                          "letterSpacing": "1px"
                        },
                        "show": {
                          "expr": "LettersShown > 0"
                        }
                      },
                      "kind": "Text"
                    }
                  ],
                  "kind": "Block"
                },
                {
                  "id": "block_4",
                  "name": "Answer Layout",
                  "properties": {
                    "layout": "horizontal wrapped",
                    "styles": {}
                  },
                  "elements": [
                    {
                      "id": "text_23",
                      "name": "Current Attempt",
                      "properties": {
                        "content": {
                          "expr": "If(GivenUp, TheWord,Keyboard)"
                        },
                        "styles": {
                          "fontSize": "20",
                          "border": "2px solid lightgray",
                          "padding": "1px 10px",
                          "borderRadius": "5",
                          "minWidth": "10em",
                          "height": "32"
                        }
                      },
                      "kind": "Text"
                    },
                    {
                      "id": "icon_1",
                      "name": "Correct Indicator",
                      "properties": {
                        "iconName": "check_circle",
                        "styles": {
                          "fontSize": "40",
                          "color": "green"
                        },
                        "show": {
                          "expr": "IsCorrect"
                        }
                      },
                      "kind": "Icon"
                    },
                    {
                      "id": "text_13",
                      "name": "Word Points",
                      "properties": {
                        "content": {
                          "expr": "Points(TheWord) + \" points added\""
                        },
                        "show": {
                          "expr": "IsCorrect"
                        }
                      },
                      "kind": "Text"
                    }
                  ],
                  "kind": "Block"
                },
                {
                  "id": "calculation_4",
                  "name": "Is Correct",
                  "properties": {
                    "calculation": {
                      "expr": "And(Eq(Lowercase(Trim(Keyboard)), TheWord), Not(GivenUp))"
                    },
                    "show": false,
                    "whenTrueAction": {
                      "expr": "Set(Score, Score + Points(TheWord))"
                    }
                  },
                  "kind": "Calculation"
                },
                {
                  "id": "screenkeyboard_1",
                  "name": "Keyboard",
                  "properties": {
                    "useRealKeyboard": true,
                    "styles": {
                      "width": "100%"
                    }
                  },
                  "kind": "ScreenKeyboard"
                },
                {
                  "id": "block_9",
                  "name": "Word Buttons",
                  "properties": {
                    "layout": "horizontal wrapped"
                  },
                  "elements": [
                    {
                      "id": "button_12",
                      "name": "Next Word",
                      "properties": {
                        "action": {
                          "expr": "StartNewWord()"
                        },
                        "show": {
                          "expr": "Not(Answering)"
                        },
                        "enabled": {
                          "expr": "GameTimer.isRunning"
                        }
                      },
                      "kind": "Button"
                    },
                    {
                      "id": "button_13",
                      "name": "Give Up",
                      "properties": {
                        "action": {
                          "expr": "Set(GivenUp, true)"
                        },
                        "show": {
                          "expr": "Answering"
                        },
                        "content": "Skip Word"
                      },
                      "kind": "Button"
                    },
                    {
                      "id": "button_14",
                      "name": "Show A Letter",
                      "properties": {
                        "action": {
                          "expr": "Set(LettersShown, LettersShown + 1)"
                        },
                        "show": {
                          "expr": "Answering"
                        },
                        "enabled": {
                          "expr": "Lte(LettersShown, 2)"
                        }
                      },
                      "kind": "Button"
                    }
                  ],
                  "kind": "Block"
                }
              ],
              "kind": "Block"
            },
            {
              "id": "block_6",
              "name": "Ended Panel",
              "properties": {
                "show": {
                  "expr": "Status == 'Ended'"
                }
              },
              "elements": [
                {
                  "id": "text_15",
                  "name": "Text A",
                  "properties": {
                    "content": "Congratulations!",
                    "styles": {
                      "fontFamily": "Luckiest Guy",
                      "fontSize": "28",
                      "color": "#7529df"
                    }
                  },
                  "kind": "Text"
                },
                {
                  "id": "text_16",
                  "name": "Text 16",
                  "properties": {
                    "content": {
                      "expr": "'You have scored ' + Score + ' points!'"
                    }
                  },
                  "kind": "Text"
                },
                {
                  "id": "text_17",
                  "name": "Text 17",
                  "properties": {
                    "content": "Click Start Game to have a another go"
                  },
                  "kind": "Text"
                }
              ],
              "kind": "Block"
            },
            {
              "id": "block_1",
              "name": "Controls Layout",
              "properties": {
                "layout": "horizontal"
              },
              "elements": [
                {
                  "id": "button_6",
                  "name": "Start Game",
                  "properties": {
                    "action": {
                      "expr": "StartNewGame()"
                    },
                    "show": {
                      "expr": "Not(GameRunning)"
                    },
                    "appearance": "filled"
                  },
                  "kind": "Button"
                },
                {
                  "id": "button_7",
                  "name": "Stop Game",
                  "properties": {
                    "action": {
                      "expr": "EndGame()\nGameTimer.Stop()"
                    },
                    "show": {
                      "expr": "GameRunning"
                    }
                  },
                  "kind": "Button"
                },
                {
                  "id": "button_10",
                  "name": "Pause Game",
                  "properties": {
                    "action": {
                      "expr": "PauseGame()"
                    },
                    "show": {
                      "expr": "Status == 'Playing'"
                    }
                  },
                  "kind": "Button"
                },
                {
                  "id": "button_11",
                  "name": "Continue Game",
                  "properties": {
                    "action": {
                      "expr": "ContinueGame()"
                    },
                    "show": {
                      "expr": "Status == 'Paused'"
                    }
                  },
                  "kind": "Button"
                },
                {
                  "id": "button_4",
                  "name": "Instructions",
                  "properties": {
                    "action": {
                      "expr": "Instructions.Show()"
                    }
                  },
                  "kind": "Button"
                }
              ],
              "kind": "Block"
            }
          ],
          "kind": "Page"
        },
        {
          "id": "functionimport_1",
          "name": "WordList",
          "properties": {
            "source": "words2.js",
            "exportName": "Words"
          },
          "kind": "FunctionImport"
        }
      ],
      "kind": "App"
    },
    {
      "id": "_TOOLS",
      "name": "Tools",
      "properties": {},
      "kind": "ToolFolder"
    },
    {
      "id": "_COMPONENTS",
      "name": "Components",
      "properties": {},
      "kind": "ComponentFolder"
    }
  ],
  "kind": "Project"
}